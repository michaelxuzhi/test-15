.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo{
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  /* background: #fff; */
  /* border: 1px solid rgba(0, 0, 0, 0.1); */
