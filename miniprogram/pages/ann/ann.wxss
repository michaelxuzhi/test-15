  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.radius-my{
  border-radius: 50%;
  background-size: cover;
}

.bg-gradual-mypage {
  background-image: linear-gradient(to right,#ee9ae5,#5961f9);
  color: #fff;
}


.pro-history {
  width: 100%;
  
  position: fixed;
  bottom: 0rpx;
  font-size: 25rpx;
  text-align: center;
  font-weight: bolder;
  color: #3529df;
  
  /*text-decoration: underline;*/
}
